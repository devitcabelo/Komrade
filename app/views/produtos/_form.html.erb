
<%= simple_form_for(@produto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :descricao %>
    <%= f.input :valor_locacao, input_html: {:"data-symbol"=>"R$", :"data-thousands"=>".", :"data-decimal" => ","} %>
    <%= f.input :plataforma %>
    <%= f.input :genero %>
    <%= f.input :estudio %>
    <%= f.input :idade_recomendada %>
    <%= f.input :data_lancamento %>
    <%= f.input :resolucao_maxima %>
    <%= f.input :tipo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<script>
  $(function() {
    console.log($('#produto_valor_locacao'))
    $('#produto_valor_locacao').maskMoney();
  })
</script>