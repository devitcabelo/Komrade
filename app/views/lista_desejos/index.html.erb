<p id="notice"><%= notice %></p>

<h1>Lista de desejos</h1>

<div class="col-sm-8 text-center table-produto table-dark">
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Nome</th>
      <th>Valor locacao</th>
      <th>Nota</th>
      <th>Genero</th>
      <th>Estudio</th>
      <th>Classificação Indicativa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @lista_desejos.nil? %>
      <tr class="center">
        <td>Nenhum produto encontrado.</td>
      </tr>
    <% else %>
      <% @lista_desejos.each do |desejo| %>
        <tr class="center">
          <td>
            <%= desejo.produto.favorito_do(perfil) ? "Favorito" : "Não favorito" %>
          </td>
          <td><%=link_to desejo.produto.to_s, produto_path(desejo.produto) %></td>
          <td><%= desejo.produto.valor_locacao.format %></td>
          <td><%= desejo.produto.nota %></td>
          <td><%= desejo.produto.genero %></td>
          <td><%= desejo.produto.estudio %></td>
          <td><%= desejo.produto.idade_recomendada %></td>
          <td><%= link_to 'Alugar', produto_url(desejo.produto) %></td>
          <td><%= link_to 'Adicionar a lista de desejos', produto_url(desejo.produto) %></td>

          <% if can_control %>
            <td><%= link_to 'Show', desejo.produto %></td>
            <td><%= link_to 'Edit', edit_produto_path(desejo.produto) %></td>
            <td><%= link_to 'Destroy', desejo.produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>

